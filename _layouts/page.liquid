---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

{% comment %} Enable slider for typewriter pages with gallery images {% endcomment %}
{% if page.collection == 'typewriters' and page.gallery_images and page.gallery_images.size > 0 %}
  {% assign enable_slider = true %}
{% elsif page.images and page.images.slider %}
  {% assign enable_slider = true %}
{% else %}
  {% assign enable_slider = false %}
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  {% if page.collection == 'typewriters' and page.img %}
    <!-- Cover photo for typewriter pages -->
    <div class="typewriter-cover mb-4">
      {% include figure.liquid loading="eager" path=page.img title=page.title class="img-fluid rounded z-depth-1" %}
    </div>
  {% endif %}

  <article>
    {{ content }}
    
    {% comment %} Auto-inject gallery slider for typewriter pages if gallery_images are defined {% endcomment %}
    {% if page.collection == 'typewriters' and page.gallery_images and page.gallery_images.size > 0 %}
      {% include typewriter_gallery.liquid images=page.gallery_images %}
    {% endif %}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
